<?xml version="1.0" encoding="UTF-8"?>
<project name="system_design_book" default="build">
    <include file="internal_build.xml"/>

    <target name="module.dependencies">
        <module-dependency module="customer"/>
        <module-dependency module="loan"/>
        <module-dependency module="presentation" on="application"/>
        <module-dependency module="application" on="customer, loan"/>
    </target>

    <target name="init" depends="module.dependencies"/>

    <target name="clean" depends="init"/>
    <target name="compile" depends="init"/>
    <target name="test" depends="init"/>
    <target name="build" depends="init, clean, compile, test"/>
</project>